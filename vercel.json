{
  "functions": {
    "api/*.ts": {
      "includeFiles": "src/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/pipeline-fill",
      "schedule": "0 6 1,15 * *"
    }
  ]
}
